{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build IRobot",
      "type": "shell",
      "command": "g++",
      "args": [
        "-g",
        "${workspaceFolder}/IRobot/main.cpp",
        "${workspaceFolder}/IRobot/iRobot.cpp",
        "${workspaceFolder}/IRobot/ProximitySensor.cpp",
        "-o",
        "${workspaceFolder}/IRobot/build/IRobotExecutable",
        "-std=c++17"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
