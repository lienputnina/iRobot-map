{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch with LLDB",
      "type": "lldb",
      "request": "launch",
      "program": "${workspaceFolder}/HitGame/build/HitGameExecutable",
      "args": [],
      "cwd": "${workspaceFolder}/HitGame",
      "preLaunchTask": "Build HitGame"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "cwd": "${workspaceFolder}/HitGame",
      "program": "${workspaceFolder}/HitGame/build/Debug/outDebug",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
